<% provide(:title, 'Sign Up') %>
<h1>Sign Up for Special Offers</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@subscriber) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Subscribe", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
